{
  "trigger": {
    "schedule": {
      "daily" : { "at" : "14:00" }
    }
  },
  "input": {
    "search": {
      "request": {
        "search_type": "query_then_fetch",
        "indices": [],
        "types": [],
        "body": {
          "size": 0,
          "query": {
            "bool": {
              "must": [
                {
                  "match": {
                    "heroku_drain_id": "d.5ab6fa0a-2f02-4609-b7db-b4e17e95f429"
                  }
                },
                {
                  "match": {
                    "code": "error_validation_failed"
                  }
                }
              ],
              "filter": [
                {
                  "range": {
                    "@timestamp": {
                      "gte": "now-1h"
                    }
                  }
                }
              ]
            }
          }
        }
      }
    }
  },
  "condition": {
    "compare": {
      "ctx.payload.hits.total": {
        "gt": 0
      }
    }
  },
  "actions": {
    "notify-slack": {
      "throttle_period_in_millis": 300000,
      "slack": {
        "message": {
          "from": "Blink",
          "to": [
            "#blink"
          ],
          "attachments": [
            {
              "color": "warning",
              "title": "Daily Validation Errors Report",
              "text": "Encountered {{ctx.payload.hits.total}} validation last day.\n<https://f1dc9460e3fc9995e3105d273237338a.us-east-1.aws.found.io:9243/goto/1cda156be9f0acc0f6d329554e4b8e96|View errors> | <https://bit.ly/blink-dashboard-2-0|Open Dashboard> | <https://f1dc9460e3fc9995e3105d273237338a.us-east-1.aws.found.io:9243/app/kibana#/management/elasticsearch/watcher/watches/watch/blink-validation-errors-daily|Acknowledge>"
            }
          ]
        }
      }
    }
  }
}
